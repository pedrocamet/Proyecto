                        <div class="form-group-P">
                            <div class="input-group-P" id="show_hide_password">
                                <input autofocus class="form-control-P" id="password" name="password" placeholder="Contraseña" required type="password" value>
                                <% if(typeof errores != 'undefined'){ %>
                                    <% for(let i = 0; i < errores.length; i++){ %>
                                    <% if(errores[i].param == "password"){ %>
                                    <small class="text-danger"> <%= errores[i].msg%> </small>
                                    
                            <% } %>
                            <% } %>
                            <% } %>
                            
                            </div> 
                        </div>
                        <label> Subir foto de perfil </label>
                            <input type="file" name="fotoPerfil">
                            <% if(typeof errores != 'undefined'){ %>
                                <% for(let i = 0; i < errores.length; i++){ %>
                                <% if(errores[i].param == "fotoPerfil"){ %>
                                <small class="text-danger"> <%= errores[i].msg%> </small>
                                
                        <% } %>
                        <% } %>
                        <% } %>

                        <div class="footer-P">
                            <div>
                                <button class="btn-login" type="submit" id="botonRegistro"> Crear cuenta </button>
                            </div>
                        </div>
                        <br>
                        <a href="https://www.facebook.com/" class="hipervinculo-p"> Continuar con facebook </a>
                        <br>
                        <br>
                        <a href="https://www.google.com/" class="hipervinculo-p"> Continuar con Google </a>
                    </div>
                </form>    
            </div>
            <br>
            <p class="texto-alineado-P"> ¿Ya tienes una cuenta? 
                <a href="login" class="hipervinculo-p"> Inicia sesion </a>
            </p>
        </div>  
        <footer>  
            <%- include("../partials/footer") %>
        </footer> 

        <script src="/js/registro.js"></script>
        <script src="/js/validacionMail2.js"></script>
